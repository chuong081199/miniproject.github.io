<!DOCTYPE html>
<html lang="en">
<%- include("head")%>

    <body>
        <%- include("header")%>
            <div class="page-heading products-heading header-text">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-content">
                                <h4>new arrivals</h4>
                                <h2>sixteen products</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="products">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="filters">
                                <ul>
                                    <li class="active" data-filter="*">Tất cả sản phẩm</li>
                                    <% data.forEach((category)=>{%>
                                        <li data-filter=".<%- category._id%>">
                                            <%- category.name%>
                                        </li>
                                        <%})%>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="filters-content">
                                <div class="row grid">
                                    <% data.forEach((category)=>{%>
                                        <div style="display: none;">
                                            <h3>
                                                <%- category.name%>
                                            </h3>
                                        </div>
                                            <% category.products.forEach((product)=>{%> 
                                                <div class="col-lg-4 col-md-4  all <%- category._id%>">
                                                <div class="product-item">
                                                    <a href="products/<%- product._id%>"><img class="imgProduct"
                                                            src="static/image/<%- product.image[0]%>" alt=""></a>
                                                    <div class="down-content">
                                                        <a href="products/<%- product._id%>">
                                                            <h4 maxlength = "30">
                                                                <%- product.name%>
                                                            </h4>
                                                        </a>
                                                        <% const Price=product.price - (product.price * product.sale) / 100 %>
                                                            <strong><%- Price%>₫</strong>
                                                            <% if(product.sale == "0"){%>
                                                            <div style="display: none;">
                                                                <p style="text-decoration: line-through">
                                                                    <%- product.price%>
                                                                </p> <span class="sale">-<%-product.sale%>%</span>
                                                            </div>
                                                            <%}else{%>
                                                                <div>
                                                                    <p style="text-decoration: line-through">
                                                                        <%- product.price%>
                                                                    </p> <span class="sale">-<%-product.sale%>%</span>
                                                                </div>
                                                                <%}%>
                                                           
                                                            <ul class="stars">
                                                                <li><i class="fa fa-star"></i></li>
                                                                <li><i class="fa fa-star"></i></li>
                                                                <li><i class="fa fa-star"></i></li>
                                                                <li><i class="fa fa-star"></i></li>
                                                                <li><i class="fa fa-star"></i></li>
                                                            </ul>
                                                    </div>
                                                </div>
                                        </div>
                                            <%})%>
                                    <%})%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%- include("footer")%>

                <%- include("link")%>
                    <script language="text/Javascript">
                        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
                        function clearField(t) {                   //declaring the array outside of the
                            if (!cleared[t.id]) {                      // function makes it static and global
                                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                                t.value = '';         // with more chance of typos
                                t.style.color = '#fff';
                            }
                        }
                    </script>
    </body>

</html>