<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap"
        rel="stylesheet">

    <title>Sixteen Clothing HTML Template</title>

    <!-- Bootstrap core CSS -->
    <link href="../static/css/bootstrap.min.css" rel="stylesheet">
    <!--
          
          TemplateMo 546 Sixteen Clothing
          
          https://templatemo.com/tm-546-sixteen-clothing
          
          -->

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="../static/frontEnd/css/fontawesome.css">
    <link rel="stylesheet" href="../static/frontEnd/css/templatemo-sixteen.css">
    <link rel="stylesheet" href="../static/frontEnd/css/owl.css">

</head>

<body>
    <%- include("header")%>
        <div class="page-heading products-heading header-text">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-xl-6">
                        <ul>
                            <%for(let i=0; i < data.image.length; i++){%>
                                <li>
                                    <img class="listImg" src="../static/image/<%-data.image[i]%>" alt="">
                                </li>
                                <%}%>
                        </ul>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-6">
                        <div class="mb-3">
                            <h4>
                                <%- data.name%>
                            </h4>
                        </div>
                        <div class="mb-3">
                            <p>
                                <%- data.code%>
                            </p>
                        </div>
                        <div class="mb-3">
                            <h5>kích thước: </h5>
                            <ul>
                                <%for(let i=0; i < data.size.length; i++){%>
                                    <li>
                                        <span>
                                            <%-data.size[i]%> &nbsp
                                        </span>
                                    </li>
                                    <%}%>
                            </ul>
                            <div class="mb-3">
                                <% const Price=data.price - (data.price * data.sale) / 100 %>
                                    <p>Giá: </p>
                                    <strong>
                                        <%- Price%>₫
                                    </strong><br>
                            </div>
                            <div class="mb-3">
                                <%if(data.status==true){%>
                                    <%const Status="còn hàng" %>
                                        <button class="btn btn-danger"> <a class="btnCart"
                                                href="addcard/<%-data._id%>">thêm vào giỏ hàng</a></button>
                                    <%}else{%>
                                        <%const Status="hết hàng" %>
                                        <button class="btn btn-warning"><%- Status%></button>
                                    <%}%>             
                            </div>
                            <div class="mb-3">
                                <h5>Mô tả chi tiết: </h5>
                                <p>
                                    <%- data.describe%>
                                </p>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <footer>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="inner-content">
                                    <p>Copyright @ House3D 2017- 2021. All rights reserved.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
                <!-- Bootstrap core JavaScript -->
                <script src="../static/jquery/jquery.min.js"></script>
                <script src="../static/js/bootstrap.bundle.min.js"></script>


                <!-- Additional Scripts -->
                <script src="../static/frontEnd/js/custom.js"></script>
                <script src="../static/frontEnd/js/owl.js"></script>
                <script src="../static/frontEnd/js/slick.js"></script>
                <script src="../static/frontEnd/js/isotope.js"></script>
                <script src="../static/frontEnd/js/accordions.js"></script>
                <script language="text/Javascript">
                    cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
                    function clearField(t) {                   //declaring the array outside of the
                        if (!cleared[t.id]) {                      // function makes it static and global
                            cleared[t.id] = 1;  // you could use true and false, but that's more typing
                            t.value = '';         // with more chance of typos
                            t.style.color = '#fff';
                        }
                    }
                </script>
</body>
<style>
    .btnCart {
        text-decoration: none;
        color: aliceblue;

    }
</style>

</html>