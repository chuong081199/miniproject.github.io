<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("head")%>
   
    <script src='https://cdn.tiny.cloud/1/a57kalmwigr1bzkrg6x9lnm2zd95kb9ftfvozv3lk9xk6hid/tinymce/5/tinymce.min.js' referrerpolicy="origin"></script>
    <script>
    tinymce.init({
      selector: '#mytextarea'
    });
    </script>
    <body>
        <div class="page-wrapper chiller-theme toggled" style="font-weight: 600">
            <%- include("menu")%>
                <main class="page-content">
                    <div class="container-fluid" style="font-size: 20;">
                        <div class="row">
                            <div class="container" >
                                <form action="postProduct" method="post" enctype="multipart/form-data">
                                    <div class="row form-group form-control">
                                        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                            <div class="form-control form-group mb-2">
                                                <select name="nameCategory" class=" custom-select select-accounts">
                                                    <%data.forEach((category)=>{ %>
                                                        <option value="<%- category._id%>">
                                                            <%- category.name%>
                                                        </option>
                                                        <%})%>
                                                </select>
                                            </div>
                                            <div class="form-control">
                                                <span>Tên sản Phẩm: </span> <br>
                                                <input type="text" name="name" class="form-control validate" required>
                                            </div>
                                            <div class="form-control">
                                                <span>Giá sản phẩm:</span> <br>
                                                <input type="number" name="price" class="form-control validate" required>
                                            </div>
                                            <div class="form-control">
                                                <span>Mã sản phẩm:</span> <br>
                                                <input type="text" name="code" class="form-control validate" required>
                                            </div>
                                            <div class="form-control">
                                                <span>Size:</span> <br>
                                                <input type="text" name="size" class="form-control validate" required>
                                            </div>
                                            <div class="form-control">
                                                <span>Mô tả</span> <br>
                                                <!-- <textarea class="conte validate" id="mytextarea" name="mytextarea" required></textarea> -->
                                                <textarea class="conte" id="mytextarea" name="mytextarea"></textarea>
                                            </div>
                                            <div class="form-control">
                                                <span>Sale:</span> <br>
                                                <input type="number" name="sale" maxlength="2" class="form-control validate" required>
                                            </div>
                                            <div class="form-control">
                                                <span>Trạng thái:</span> <br>
                                                <input type="checkbox" name="status"> <span>Còn hàng</span>
                                            </div>
                                            <div class="form-control">
                                                    <input type="submit" value="ADD NEW PRODUCT"
                                                    class="btn btn-light btn-block text-uppercase"
                                                    >
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                            <span>Ảnh: </span> <br>
                                            <div class="product-img-dummy mx-auto mt-3">
                                                <i class="fas fa-cloud-upload-alt upload-icon"
                                                  onclick="document.getElementById('fileInput').click();"></i>
                                              </div>
                                            <div class="form-control mt-3 mb-3">
                                                <input id="fileInput" type="file" name="nameImage" multiple
                                                    class="form-control" style="display: none;">
                                                <input type="button" class="btn btn-light btn-block text-uppercase"
                                                    value="UPLOAD PRODUCT IMAGE"
                                                    onclick="document.getElementById('fileInput').click();" />
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </main>
        </div>
    </body>

</html>